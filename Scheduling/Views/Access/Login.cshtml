@{
    Layout = null;
}

@model Scheduling.ViewModels.LoginViewModel;

<!DOCTYPE html>

<html data-bs-theme="light">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SCH</title>
    <link rel="icon" type="image/x-icon" href="~/images/favicon/favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-body-secondary text-body">
    <div class="container">
        <div class="row mt-5">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 m-auto">
                <div class="card border-0 shadow mx-auto" id="loginCard" style="max-width:520px;">
                    <div class="card-body">
                        <h1 class="text-center my-3 mb-4">
                            <i class="bi bi-calendar2-week-fill"></i> SCH
                        </h1>

                        @* <div asp-validation-summary="All" class="text-danger"></div> *@

                        <form asp-controller="Access" asp-action="Login" method="post">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Username" autocomplete="off" class="form-control form-control-lg" placeholder="Username">
                                <label asp-for="Username"></label>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" asp-for="Password" autocomplete="off" class="form-control form-control-lg" placeholder="Password">
                                <label asp-for="Password"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-check">
                                <input type="checkbox" asp-for="KeepLoggedIn" class="form-check-input" />
                                <label class="form-check-label" for="KeepLoggedIn">
                                    <span>Keep me logged in.</span>
                                </label>
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" value="Login" class="btn btn-lg btn-primary shadow col-6"> Login </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.AntiForgeryToken()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</body>
</html>